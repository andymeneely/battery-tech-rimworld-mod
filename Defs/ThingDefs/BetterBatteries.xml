				<startElectricalFires>true</startElectricalFires>
			</li>
		</comps>
		<killedLeavings>
			<li>
				<thingDef>DebrisSlag</thingDef>
				<count>1</count>
			</li>
		</killedLeavings>
		<filthLeavings>
			<li>
				<thingDef>SlagRubble</thingDef>
				<count>2</count>
			</li>
		</filthLeavings>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
